# Docker environment configuration
# Copy this to .env and adjust values as needed

# ============================================
# Database Configuration
# ============================================
POSTGRES_USER=centauro
POSTGRES_PASSWORD=centauro_secure_password
POSTGRES_DB=centauro_db

# ============================================
# Application Configuration
# ============================================
# Secret key for JWT tokens - CHANGE THIS IN PRODUCTION
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Fernet key for XML encryption (optional - generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=

# ============================================
# Attachments Configuration
# ============================================
ATTACHMENTS_DIR=attachments
ATTACHMENT_BASE_URL=/attachments

# ============================================
# VBLOG Integration (Optional)
# ============================================
VBLOG_CNPJ=
VBLOG_TOKEN=
VBLOG_BASE=

# ============================================
# Brudam Tracking Integration (Optional)
# ============================================
BRUDAM_USUARIO=
BRUDAM_SENHA=
BRUDAM_URL_TRACKING=
BRUDAM_CLIENTE=

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Application Server
# ============================================
APP_PORT=8000

# ============================================
# pgAdmin Configuration (for docker-compose debug profile)
# ============================================
PGADMIN_EMAIL=admin@example.com
PGADMIN_PASSWORD=admin
